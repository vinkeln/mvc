{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
<div class="library-container-medium">
    <h1>{{ book.title }}</h1>

    <div class="book-details">
        <div class="book-cover">
            <img src="{{ book.image }}" alt="{{ book.title }}">
        </div>
        <div class="book-info">
            <p><strong>Författare:</strong> {{ book.author }}</p>
            <p><strong>ISBN:</strong> {{ book.isbn }}</p>

            <div class="book-actions">
                <a href="{{ path('library_update', {id: book.id}) }}" class="btn-library btn-primary btn-small">
                    Redigera
                </a>
                <form method="POST" action="{{ path('library_delete', {id: book.id}) }}" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <button type="submit" class="btn-library btn-danger btn-small">
                        Radera
                    </button>
                </form>
            </div>
        </div>
    </div>

    <p class="back-link">
        <a href="{{ path('library_show_all') }}" class="library-link">← Tillbaka till alla böcker</a>
    </p>
</div>
{% endblock %}

